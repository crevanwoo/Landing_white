// portfolio begins

section.portfolio#portfolio
	div.wrapper
		p.title_above Morbi rhoncus
		h2.mid_h Our works
		div.container-fluid
			div.row
				-for(var i =1; i < 7; i++)
					// single work begins
					div.single_work.col-sm-4.col-xs-12.clear
						img(src="images/grid_pict_" + i + ".jpg")
						div.single_work_hover
							div.shim
								// link to current work own page
								a.link.ellipse(href="")
									span.fa.fa-external-link
							div.title_block
								// single work title
								h5.product_name Ut pretium leo vel
								// single work category
								a.category Category
					// single work ends	
				
// portfolio ends

