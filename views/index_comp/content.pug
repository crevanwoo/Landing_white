// top slider begins

div.top_wrapper#top
	section.top_slider
		-for (var i =0; i < 5; i++)
			// single slide begins
			div.top_slide(data-slide-num= i)
				div.img
					// slide background image 
					img(src="images/slide_bg_1.jpg")
				// text in slide begins	
				div.slide_info.wrapper
					h1.big_h Lorem ipsum dolor
					p.title Aenean id ligula aliquam dolor tristique fringilla
					a.button Start now
				// text in slide ends
			// single slide ends
	div.prev_arrow 
		span.fa.fa-chevron-left
	div.next_arrow
		span.fa.fa-chevron-right
		
// top slider ends

// article begins

article.main_article#about_company
	div.wrapper
		p.title_above Donec tristique rutrum
		h2.mid_h About company
		p.text!= article_text_1
		// hidden text
		p.text.more= article_text_2
		a.button Read more

// article ends

// services begins

section.services#services
	div.wrapper
		p.title_above Lorem ipsum
		h2.mid_h Our services
		div.services_grid.clear
			-for(var i =0; i < 6; i++)
				// single service begins
				div.single_service
					div.service_icon
						div.single_service_borders_l
						div.single_service_borders_r
						span(class="fa " + service_icon_class[i])
					div.single_service_info
						h4.small_h Some Service
						p.text= service_text
				// single service ends
						
					

// services ends

